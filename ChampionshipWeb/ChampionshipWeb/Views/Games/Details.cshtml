@model ChampionshipWeb.Models.game

@{
    ViewBag.Title = "Details";
}


<div>
    <h2>Игра</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Дата
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date)
        </dd>

        <dt>
            Счет команды 1
        </dt>

        <dd>
            @Html.DisplayFor(model => model.team1_score)
        </dd>

        <dt>
            Счет команды 2
        </dt>

        <dd>
            @Html.DisplayFor(model => model.team2_score)
        </dd>

        <dt>
            Место
        </dt>

        <dd>
            @Html.DisplayFor(model => model.place)
        </dd>

        <dt>
            Статус
        </dt>

        <dd>
            @Html.DisplayFor(model => model.game_state.name_ru)
        </dd>

        <dt>
            Этап
        </dt>

        <dd>
            @Html.DisplayFor(model => model.stage.name)
        </dd>

        <dt>
            Команда 1
        </dt>

        <dd>
            @Html.DisplayFor(model => model.team.short_name)
        </dd>

        <dt>
            Команда 2
        </dt>

        <dd>
            @Html.DisplayFor(model => model.team1.short_name)
        </dd>

    </dl>
</div>
<p>
    @if (HttpContext.Current.User.IsInRole("admin"))
    {
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.id })
    }
</p>
