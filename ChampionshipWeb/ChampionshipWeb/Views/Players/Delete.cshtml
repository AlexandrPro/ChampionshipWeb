@model ChampionshipWeb.Models.player

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление</h2>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>player</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Имя
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Дата рождения
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date_of_birth)
        </dd>

        <dt>
            Вес
        </dt>

        <dd>
            @Html.DisplayFor(model => model.weight)
        </dd>

        <dt>
            Рост
        </dt>

        <dd>
            @Html.DisplayFor(model => model.height)
        </dd>

        <dt>
            Фото
        </dt>

        <dd>
            @Html.DisplayFor(model => model.photo_path)
        </dd>

        <dt>
            Статуч
        </dt>

        <dd>
            @Html.DisplayFor(model => model.player_state.name_ru)
        </dd>

        <dt>
            Позиция
        </dt>

        <dd>
            @Html.DisplayFor(model => model.position.name_ru)
        </dd>

        <dt>
            Команда
        </dt>

        <dd>
            @Html.DisplayFor(model => model.team.short_name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" />
        </div>
    }
</div>
