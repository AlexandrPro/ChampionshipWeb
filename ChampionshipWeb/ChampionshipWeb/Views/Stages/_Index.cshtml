@model IEnumerable<ChampionshipWeb.Models.stage>

<p></p>
<h3>
    Этапы чемпионата
</h3>


<p>
    @if (HttpContext.Current.User.IsInRole("admin"))
    {
        @Html.ActionLink("Создать новый", "Create", "Stages")
    }
</p>
<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Тип этапа
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type_of_stage.name_ru)
        </td>
        <td>
            @Html.ActionLink("Детали", "Details", "Stages", new { id = item.id }, null)
            @if (HttpContext.Current.User.IsInRole("admin"))
                {
                @Html.ActionLink("Редактировать", "Edit", "Stages", new { id = item.id }, null)
            }
            @if (HttpContext.Current.User.IsInRole("admin"))
                {
                @Html.ActionLink("Удалить", "Delete", "Stages", new { id = item.id }, null)
            }
        </td>
    </tr>
}

</table>
