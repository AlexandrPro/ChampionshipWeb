@model IEnumerable<ChampionshipWeb.Models.teams_in_stage>


<table class="table">
    <tr>
        <th>
            Команда
        </th>
        <th>
            Кол-во игр
        </th>
        <th>
            Выиграно
        </th>
        <th>
            Проиграно
        </th>
        <th>
            Очки
        </th>
        <th>
            Очков заработано 
        </th>
        <th>
            Очков проиграно 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.team.short_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.game_count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.win)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lose)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.points_earned)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.points_lost)
        </td>
    </tr>
}

</table>
