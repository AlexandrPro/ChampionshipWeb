@model IEnumerable<ChampionshipWeb.Models.team>

@{
    ViewBag.Title = "Index";
}

<h2>Команды</h2>

<p>
    @if (HttpContext.Current.User.IsInRole("admin"))
    {
        @Html.ActionLink("Создать новую", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            Короткое название
        </th>
        <th>
            Название
        </th>
        <th>
            Город
        </th>
        <th>
            Тренер
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.short_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city.name_ru)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.coach.name)
        </td>
        <td>
            @Html.ActionLink("Подробнее", "Details", new { id = item.id })
            @if (HttpContext.Current.User.IsInRole("admin"))
            {
                @Html.ActionLink("Редактировать", "Edit", new { id = item.id })
            }
            @if (HttpContext.Current.User.IsInRole("admin"))
            {
                @Html.ActionLink("Удалить", "Delete", new { id = item.id })
            }
        </td>
    </tr>
}

</table>
